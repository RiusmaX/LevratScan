<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_v2"
    android:orientation="vertical" >

    <ImageView
        android:id="@+id/imageView1"
        android:layout_width="137dp"
        android:layout_height="137dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="120dp"
        android:src="@drawable/warning2" />

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal|fill_vertical"
        android:layout_marginBottom="20dp"
        android:text="Code barre introuvable"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="@android:color/holo_red_dark" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal|fill_vertical" >

        <Button
            android:id="@+id/btnScan"
            android:layout_width="119dp"
            android:layout_height="match_parent"
            android:layout_marginRight="5dp"
            android:background="@drawable/button"
            android:text="Scan"
            android:textColor="@android:color/white"
            android:textSize="25sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/btnBackMenu"
            android:layout_width="126dp"
            android:layout_height="41dp"
            android:layout_gravity="center_horizontal|fill_vertical"
            android:background="@drawable/button"
            android:text="Retour Menu"
            android:textColor="@android:color/white"
            android:textSize="20sp"
            android:textStyle="bold" />

     

    </LinearLayout>
    
       <LinearLayout
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:layout_gravity="center_horizontal"
           android:layout_marginTop="20dp" >

            <EditText
                android:id="@+id/codebarre"
                android:layout_width="174dp"
                android:layout_height="match_parent"
                android:layout_marginRight="10dp"
                android:layout_weight="0.29"
                android:background="@drawable/bg_ref"
                android:ems="10"
                android:hint=" Code barre"
                android:inputType="number"
                android:textColorHint="@android:color/secondary_text_light" />

            <Button
                android:id="@+id/btnRef"
                android:layout_width="54dp"
                android:layout_height="32dp"
                android:layout_weight="0.29"
                android:background="@drawable/button"
                android:text=">"
                android:textColor="@android:color/white"
                android:textColorHint="@android:color/white"
                android:textSize="25sp" />
        </LinearLayout>

</LinearLayout>
